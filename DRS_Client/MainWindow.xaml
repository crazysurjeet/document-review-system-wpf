<Window x:Class="FileUploadSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:local="clr-namespace:FileUploadSample"
        xmlns:ccFileUpload="clr-namespace:WPF_CustomFileControl;assembly=WPF_CustomFileControl"
        mc:Ignorable="d"
        Title="Document Review System- Surajit Karmakar"
        WindowStyle="SingleBorderWindow"
        WindowState="Maximized"
        >
    <Window.Background>
        <ImageBrush ImageSource="images/background-1.jpg"/>
    </Window.Background>
    <Grid>
        <ccFileUpload:FileUploadCustomControl x:Name="fileUpload"
                                              Width="600" Margin="12,29,34,0" Height="56"
                                              VerticalAlignment="Center"
                                              FileNameChanged="fileUpload_FileNameChanged"></ccFileUpload:FileUploadCustomControl>
    </Grid>
</Window>
